{
  "name": "remark-lint-word-case",
  "repository": "https://github.com/Bugg4/remark-lint-word-case",
  "type": "module",
  "version": "1.1.0",
  "description": "remark-lint rule to ensure specified words are written in the correct casing.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p -n -l build:*",
    "build:transpile": "bun build src/*.ts --outdir dist --target node --sourcemap --packages=external",
    "build:types": "tsc && echo 'done'",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "keywords": [
    "remark",
    "remark-plugin",
    "remark-lint",
    "remark-lint-rule",
    "rule",
    "markdown",
    "lint",
    "word-case",
    "word-casing",
    "capitalization"
  ],
  "author": "Marco Bulgarelli <bulgarelli.marco99@gmail.com>",
  "bugs": "https://github.com/Bugg4/remark-lint-word-case/issues",
  "contributors": [
    "Marco Bulgarelli <bulgarelli.marco99@gmail.com>"
  ],
  "license": "ISC",
  "packageManager": "bun@1.2.20",
  "dependencies": {
    "unified-lint-rule": "^3.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/unist": "^3.0.3",
    "@types/vfile": "^4.0.0",
    "@types/vfile-location": "^3.0.0",
    "@types/vfile-message": "^2.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "remark": "^15.0.1",
    "typescript": "^5",
    "vfile-location": "^5.0.3"
  },
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "private": false
}
